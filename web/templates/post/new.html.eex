<form method="POST" action="<%= post_path(@conn, :create) %>">
  <input name="post[title]" type="text" value="<%= @post.title %>" />
  <input name="post[body]" type="textarea" value="<%= @post.body %>" />

  <%= render Blox.SharedView, "_csrf.html", assigns %>

  <input type="submit" value="Create" />
</form>
